<?xml version="1.0"?>
<config>
    <modules>
        <Dextrous_Extendcatalog>
            <version>0.1.0</version>
        </Dextrous_Extendcatalog>
    </modules>
    <frontend>
        <routers>
            <extendcatalog>
                <use>standard</use>
                <args>
                    <module>Dextrous_Extendcatalog</module>
                    <frontName>extendcatalog</frontName>
                </args>
            </extendcatalog>
        </routers>
        <layout>
            <updates>
                <extendcatalog>
                    <file>extendcatalog/extendcatalog.xml</file>
                </extendcatalog>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<extendcatalog>
				<use>admin</use>
				<args>
					<module>Dextrous_Extendcatalog</module>
					<frontName>extendcatalog</frontName>
				</args>
			</extendcatalog>
        </routers>
    </admin>
    <adminhtml>
	   <acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<system>
							<children>
								<config>
									<children>
										<extendcatalog translate="title" module="extendcatalog">
											<title>Extendcatalog Configuration</title>
										</extendcatalog>
									</children>
								</config>
							</children>
						</system>
						<Dextrous_Extendcatalog>
							<title>Extendcatalog Module</title>
							<sort_order>10</sort_order>
						</Dextrous_Extendcatalog>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<extendcatalog>
					<file>extendcatalog.xml</file>
				</extendcatalog>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
            <extendcatalog>
                <class>Dextrous_Extendcatalog_Model</class>
                <resourceModel>extendcatalog_mysql4</resourceModel>
            </extendcatalog>
            <extendcatalog_mysql4>
                <class>Dextrous_Extendcatalog_Model_Mysql4</class>
                <entities>
                    <extendcatalog>
                        <table>extendcatalog</table>
                    </extendcatalog>
                </entities>
            </extendcatalog_mysql4>
        </models>
        <resources>
            <extendcatalog_setup>
                <setup>
                    <module>Dextrous_Extendcatalog</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </extendcatalog_setup>
            <extendcatalog_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </extendcatalog_write>
            <extendcatalog_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </extendcatalog_read>
        </resources>
        <blocks>
            <extendcatalog>
                <class>Dextrous_Extendcatalog_Block</class>
            </extendcatalog>
        </blocks>
        <helpers>
            <extendcatalog>
                <class>Dextrous_Extendcatalog_Helper</class>
            </extendcatalog>
        </helpers>
    </global>
	<default>
		<extendcatalog>
			<config1>
				<active>0</active>
				<max_product>3</max_product>
				<title>Bestseller Products</title>
			</config1>
			<config2>
				<active>0</active>
				<max_product>3</max_product>
				<title>Fetured Products</title>
			</config2>
			<config3>
				<active>0</active>
				<max_product>3</max_product>
				<title>Most Viewed Products</title>
			</config3>
			<config4>
				<active>0</active>
				<max_product>3</max_product>
				<title>New Products</title>
				<type>Recently Added</type>
			</config4>
			<config5>
				<active>0</active>
				<title>All Products</title>
			</config5>
			<config7>
				<active>0</active>
				<max_product>3</max_product>
				<title>Recently Ordered Products</title>
			</config7>
		</extendcatalog>
	</default>
</config>